-- vim: set syntax=haskell:
-- best with haskell syntax highlighting

fullidentifer
   -- TODO path
   - path?
   - identifer

path
    - ("lib" ".")?
    - identifier
    - ("." identifier )*

identifer
   -- NOTE: not <keyword>
   - ([a-z][A-Z])+([a-z][A-Z][0-9])*(_([a-z][A-Z][0-9])*)*

fullexpression
    - fe0 ("and", fe0)*
    - fe2 ("or" fe2)*
    {-- ...
        ++
        +
        -
        *
        /
        a^a
        âˆša
        -a
        !a
        a:a
    - fe1 (".", fe1)* -- see: discussion/dot-openrator.sol
        <expression>
    --}

expression
    / functioncall
    / value

literal
    / bool
    / int
    / float
    / string

value
    / literal
    / fullidentifier
    / closure
    / array
    / "|" fullexpression "|"
    -- tuple or parenthesis
    / "(" fullexpression ** "," ")"
    / when
    / blockexpression
    -- Might be included. Complicates things. Hard to read for beginners
    -- / "$" fullexpression

arrayguard
    - "[" -- while parenthesis are discouraged when possible, this helps distinct things visually
    - (whenguard ** ",")
    - (identifer "..")?
    - "]"

objectguard
    - fullidentifier
    - (identifier "=" literal)*

tupleguard
    - "("
    - whenguard ** ","
    - ")"

whenguard
    / literal
    / objectguard
    / arrayguard
    / tupleguard
    / identifer

when
    - "when" fullexpression
    - "is" whenguard "then" fullexpression
    - ("else" fullexpression)?

closure
    - "("
    - functionarguments ** ","
    - ")"
    - "=>"
    - expression

-- sin 3.14
-- call "Sally" "+1489732567890" (Message from="david" text="Hello world")
-- call person="Sally" number="+012345678" message=(Message from"david" text="Hello world")
functioncall
    - identifier
    - functioncallarg*

functioncallarg
    - (identifier "=")?
    - value

