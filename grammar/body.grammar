-- vim: set syntax=haskell:
body
- import*
- functionOrTypeOrTest*

functionOrType
/ function
/ typeDecl
// test

test
- "test"
- string
- blockexpression

function
-   genericStub?
-   "pub"?
-   "func"
-   identifier
-   "("
-   type ** ","
-   ")"
-   ( "->" type )?
-   "="
-   expression

genericStub
- "generic"
- identifier ** ","
- where?

where
- "where"
- whereclause+

whereclause
- identifier
- "="
- fullidentifier
- "("
- type ** ","
- ")"


typeDecl
-   "type"
- identifier
- genericArgsDecl?
- enumOrStructFields

genericArgsDecl
/ "(" identifier ** "," ")"
/ identifier

enumOrStructFields
/ enumField*
/ structField

enumField
-   "|"
-   identifier
-   type?

structField
- "-" | "+"
- "mut"?
- identifier
- type

